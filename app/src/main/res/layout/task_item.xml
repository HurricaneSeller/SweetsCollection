<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="380dp"
    android:background="@mipmap/main_talk_shadow"
    android:paddingVertical="11dp"
    android:paddingHorizontal="18dp"
    android:layout_height="110dp">
    <ImageView
        android:background="@mipmap/main_talk_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/main_item_index"
        android:layout_marginTop="29dp"
        android:layout_marginStart="20dp"
        android:layout_width="25dp"
        android:layout_height="20dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/main_item_wait_title"
        android:ellipsize="marquee"
        android:text="@string/sample_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="29dp"
        android:layout_toEndOf="@id/main_item_index"
        android:layout_width="163dp"
        android:layout_height="20dp" />
    <ImageView
        android:id="@+id/main_item_wait_button"
        android:layout_marginEnd="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:ignore="ContentDescription" />
</RelativeLayout>